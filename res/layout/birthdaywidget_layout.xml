<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/birthdaywidget_layout"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    style="@style/WidgetBackground">
     
    <ImageView android:id="@+id/icon"
    	android:layout_gravity="center"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

	<LinearLayout
	    android:orientation="vertical"
	    android:layout_marginLeft="4dip"
	    android:layout_marginRight="4dip"
	    android:layout_marginBottom="2dip"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">

		<RelativeLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content">
        	
	    	<TextView android:id="@+id/text3"
				android:layout_alignParentRight="true"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	  	        style="@style/Text.Big" />
	
	    	<TextView android:id="@+id/text1"
				android:layout_alignBaseline="@id/text3"
				android:layout_toLeftOf="@id/text3"
				android:layout_alignParentLeft="true"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	style="@style/Text.Big" />

		</RelativeLayout>
		
		<RelativeLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content">
        	
	    	<TextView android:id="@+id/text4"
				android:layout_alignParentRight="true"
				android:layout_marginLeft="6dip"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	style="@style/Text.Normal" />

	    	<TextView android:id="@+id/text2"
				android:layout_alignBaseline="@id/text4"
				android:layout_toLeftOf="@id/text4"
				android:layout_alignParentLeft="true"
				android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	style="@style/Text.Normal" />

		</RelativeLayout>

	</LinearLayout>
	
</LinearLayout>
